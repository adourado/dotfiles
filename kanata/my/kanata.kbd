(defcfg
  process-unmapped-keys yes
)

(defsrc
  caps a s d f h j k l spc
)

(defvar
  tap-time 100
  hold-time 120
  tap-dance 200
)

(defalias
  caps (tap-dance $tap-dance ((tap-hold $tap-time $hold-time esc lctl) (layer-toggle nav)))
  spc (tap-hold 200 200 spc (layer-toggle nav))
)

(deflayer base
  @caps a s d f h j k l @spc
)

;; On this layer, h,j,k,l become arrow keys.
;; You can customize the keys on this layer as you wish.
(deflayer nav
  _ a s d f left down up right _
)